<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- %ex{0} = no stacktrace, %nopex = don't auto-append it again -->
            <pattern>%n[%-5level] %logger{36} - %msg%nopex%n</pattern>
        </encoder>
    </appender>

    <root level="ERROR">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>